<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Creditor</th>
      <th>Debtor</th>
      <th>Line item name</th>
      <th>Amount</th>
      <th>Comment</th>
      <th>Acknowledged request status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.creditor_id %></td>
        <td><%= request.debtor_id %></td>
        <td><%= request.line_item_name %></td>
        <td><%= request.amount %></td>
        <td><%= request.comment %></td>
        <td><%= request.acknowledged_request_status %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
