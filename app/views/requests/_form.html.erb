<%= form_for(request) do |f| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <!-- # look into email field tag -->

  <div class="field">
    <%= label_tag :debtor_email %>
    <%= text_field_tag :debtor_email, "", class: 'form_field' %>
  </div>

  <div class="field">
    <%= f.label :line_item_name %>
    <%= f.text_field :line_item_name, class: 'form_field' %>
  </div>

  <div class="field">
    <%= f.label :amount %>
    <%= f.number_field :amount, class: 'form_field', step: :any %>
  </div>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_field :comment, class: 'form_field' %>
  </div>

  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
